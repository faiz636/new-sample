<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#fff"
    android:elevation="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="#0f000000"
        android:contentDescription="new title image"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_title_samll" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image"
        android:maxLines="3"
        android:text="Tokyo stocks plunge in early trade"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:text="1"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/time_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/time"
        android:layout_toRightOf="@+id/time"
        android:text="hr"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vertical_seprator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/time_unit"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/time_unit"
        android:layout_toRightOf="@id/time_unit"
        android:text="|"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/time_unit"
        android:layout_toEndOf="@id/vertical_seprator"
        android:layout_toRightOf="@id/vertical_seprator"
        android:singleLine="true"
        android:text="Middle East"
        android:textColor="#f00"
        android:textSize="14sp" />


</RelativeLayout>