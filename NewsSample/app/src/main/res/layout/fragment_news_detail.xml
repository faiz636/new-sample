<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rubbersoft.android.newssample.ui.fragments.NewsDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="#0f000000"
            android:contentDescription="new title image"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_title" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="World Powers 'agree Syria ceasefire'"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/time_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/time"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/time"
            android:layout_toRightOf="@+id/time"
            android:text="hour ago"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vertical_seprator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/time_unit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@id/time_unit"
            android:layout_toRightOf="@id/time_unit"
            android:text="|"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/time_unit"
            android:layout_toEndOf="@id/vertical_seprator"
            android:layout_toRightOf="@id/vertical_seprator"
            android:text="Middle East"
            android:textColor="#f00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/s_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="this is desc"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/l_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="this is desc" />

    </RelativeLayout>
</ScrollView>
